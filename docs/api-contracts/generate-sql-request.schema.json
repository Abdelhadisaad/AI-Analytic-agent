{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abdelhadisaad.github.io/AI-Analytic-agent/schemas/generate-sql-request.schema.json",
  "title": "GenerateSqlRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "requestId",
    "correlationId",
    "naturalLanguageQuery",
    "schemaMetadata"
  ],
  "properties": {
    "requestId": {
      "type": "string"
    },
    "correlationId": {
      "type": "string"
    },
    "naturalLanguageQuery": {
      "type": "string",
      "minLength": 3
    },
    "locale": {
      "type": "string"
    },
    "schemaMetadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dialect", "tables"],
      "properties": {
        "dialect": {
          "type": "string",
          "enum": ["postgresql"]
        },
        "tables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["tableName", "columns"],
            "properties": {
              "tableName": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "columns": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["name", "type"],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    },
                    "nullable": {
                      "type": "boolean"
                    },
                    "semanticHint": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "relationships": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["fromTable", "fromColumn", "toTable", "toColumn"],
            "properties": {
              "fromTable": {
                "type": "string"
              },
              "fromColumn": {
                "type": "string"
              },
              "toTable": {
                "type": "string"
              },
              "toColumn": {
                "type": "string"
              },
              "relationType": {
                "type": "string",
                "enum": ["one-to-one", "one-to-many", "many-to-one", "many-to-many"]
              }
            }
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "maxRows": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5000
        },
        "allowAggregations": {
          "type": "boolean"
        },
        "allowedSchemas": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
